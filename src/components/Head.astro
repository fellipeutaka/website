---
import "@fontsource/inter";

import { SEO, type Props as SEOProps } from "astro-seo";
import { ViewTransitions } from "astro:transitions";

const { props } = Astro;

export type Props = SEOProps;
---

<head>
  <slot />
  <ViewTransitions />
  <SEO
    titleTemplate="%s | Fellipe Utaka"
    titleDefault="Fellipe Utaka"
    description="Fellipe Utaka's personal website"
    canonical="https://fellipeutaka.vercel.app"
    twitter={{
      creator: "@fellipeutaka",
    }}
    extend={{
      link: [{ rel: "icon", type: "image/svg+xml", href: "/favicon.svg" }],
      meta: [
        {
          name: "author",
          content: "Fellipe Utaka",
        },
        {
          name: "keywords",
          content:
            "Fellipe Utaka, Fellipe, Utaka, Software Engineer, Software Developer, Developer, Engineer, Frontend Engineer, Frontend Developer, Frontend, Front-end, Front end, Front, Frontend Development, Frontend Engineering, Frontend Developer",
        },
        {
          name: "generator",
          content: Astro.generator,
        },
        {
          name: "viewport",
          content: "width=device-width, initial-scale=1.0",
        },
      ],
    }}
    charset="utf-8"
    {...props}
  />
</head>
